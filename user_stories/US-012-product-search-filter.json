{
  "id": "US-012",
  "title": "Product Search and Filtering",
  "epic": "Product Browsing and Search",
  "priority": "Must Have",
  "iteration": 2,
  "status": "pending",
  "description": "As a consumer, I want to search and filter products by various criteria (category, seasonality, location, price, etc.) so that I can quickly find specific products that meet my needs.",
  "user_role": "Consumer",
  "business_value": "Improves user experience and conversion by helping consumers find desired products quickly.",
  "dependencies": ["US-011"],
  "acceptance_criteria": [
    {
      "id": "AC-012-1",
      "description": "Search bar with autocomplete",
      "given": "Consumer is on any page",
      "when": "Consumer types in search bar",
      "then": "Autocomplete suggestions appear based on product names"
    },
    {
      "id": "AC-012-2",
      "description": "Search returns relevant results",
      "given": "Consumer has entered search term",
      "when": "Consumer submits search",
      "then": "Products matching the search term are displayed"
    },
    {
      "id": "AC-012-3",
      "description": "Filter by category",
      "given": "Consumer is viewing search results or catalog",
      "when": "Consumer selects a category filter",
      "then": "Only products in selected category are shown"
    },
    {
      "id": "AC-012-4",
      "description": "Filter by seasonality",
      "given": "Consumer is viewing products",
      "when": "Consumer selects seasonality filter (e.g., 'Summer')",
      "then": "Only seasonal products are shown"
    },
    {
      "id": "AC-012-5",
      "description": "Filter by farm location",
      "given": "Consumer is viewing products",
      "when": "Consumer selects location filter or radius",
      "then": "Only products from farms in selected area are shown"
    },
    {
      "id": "AC-012-6",
      "description": "Filter by price range",
      "given": "Consumer is viewing products",
      "when": "Consumer sets min and max price",
      "then": "Only products within price range are shown"
    },
    {
      "id": "AC-012-7",
      "description": "Sort options available",
      "given": "Consumer is viewing products",
      "when": "Consumer selects sort option",
      "then": "Products are sorted by price, popularity, or rating"
    },
    {
      "id": "AC-012-8",
      "description": "Multiple filters can be combined",
      "given": "Consumer is viewing products",
      "when": "Consumer applies multiple filters",
      "then": "Products matching all filters are shown"
    },
    {
      "id": "AC-012-9",
      "description": "Filters can be cleared",
      "given": "Consumer has applied filters",
      "when": "Consumer clicks 'Clear Filters'",
      "then": "All filters are removed and full catalog is shown"
    }
  ],
  "technical_notes": [
    "Implement full-text search with relevance ranking",
    "Index products for fast search",
    "Use geolocation for location-based filtering",
    "Debounce autocomplete requests",
    "URL should reflect applied filters for shareability"
  ],
  "api_endpoints": [
    {
      "method": "GET",
      "path": "/api/v1/products/search",
      "description": "Search products with query and filters"
    },
    {
      "method": "GET",
      "path": "/api/v1/products/autocomplete",
      "description": "Get autocomplete suggestions"
    },
    {
      "method": "GET",
      "path": "/api/v1/products?category=X&season=Y&location=Z&minPrice=A&maxPrice=B&sort=C",
      "description": "Get filtered products"
    }
  ],
  "test_cases": [
    {
